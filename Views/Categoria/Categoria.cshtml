@model List<Categoria>
    <h1>Lista de categorias</h1>

<table class="table border">
    
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Producto</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NombreCategoria</td>

            <td>
                @foreach (var producto in item.Producto)
                {
                    <span>@producto.NombreProducto</span>
                }
            </td>
            <td>
                <a href="/categoria/editarcategoria/@item.Id" class="btn btn-secondary">Editar</a>

                <form action="/categoria/borrarcategoria" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.Id"/>
                    <button class="btn btn-danger">Borrar</button>
                </form>

                
            </td>
        </tr>
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Categorias</td>
        </tr>
    }
</table>
